<div class="modal hide fade out" id="user-edit">
  <div class="modal-header">
    <button class="close" data-dismiss="modal">x</button>
    <h2>Edit Event</h2>
  </div>

  <%= simple_form_for(@event, :remote => true) do |f| %>
    <div class="modal-body">

      <p class="notice"><%= flash[:notice] %></p>
      <p class="error"><%= flash[:error] %></p>

        <%= f.input :interest_id, :collection => Interest.all.order('name ASC'), :label_method => :name, :value_method => :id, label: "Interest Category", :required => true %>
        <%= f.input :name, label: "Event Name" %>
        <%= f.input :location, label: "Event Location" %>
        <%= f.input :address, label: "Event Address" %>
        <%= f.input :city %>
        <%= f.input :state %>
        <%= f.input :zip_code, :as => :string %>
        <%= f.input :start_date, :as => :date, :start_year => Date.today.year, :end_year => 1900, :order => [ :month, :day, :year], :required => true %>
        <%= f.input :end_date, :as => :date, :start_year => Date.today.year, :end_year => 1900, :order => [ :month, :day, :year], :required => true  %>
        <%= f.input :start_time, :as => :time, :ampm => true, :minute_step => 5, :start_hour => 0, :end_hour => 23, :selected => 8 %>
        <%= f.input :end_time, :as => :time, :ampm => true, :minute_step => 5, :start_hour => 0, :end_hour => 23, :selected => 8  %>
        <%= f.input :description, :as => :text, label: "Event Description (required): ", :input_html => { class: 'input-large', :rows => 6 }, :required => true %>
    </div>

    <div class="modal-footer">
      <%= f.button :submit, :class => 'btn btn-large btn-success' %>

      <a href="#" class="btn" data-dismiss="modal">Close</a>
    </div>
  <% end %>
</div>